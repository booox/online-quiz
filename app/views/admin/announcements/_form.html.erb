<div class="dashboard-content">
  <h3> Add Announcement </h3>
  <div class="account-content" id="announcements">

    <%= simple_form_for [:admin, @announcement] do |f| %>

      <%= f.input :message, label: "通知内容" %>
      <%= f.input :starts_at, label: "开始时间" %>
      <%= f.input :ends_at, label: "结束时间" %>

      <%= f.submit "Submit", data: { disable_with: "Submitting..." }, class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
