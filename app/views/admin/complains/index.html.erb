

<table class="table table-bordered">
  <thead>
    <tr>
      <th>用户名</td>
      <th>吐槽来源</td>
      <th>吐槽反馈</td>
      <th>操作</td>
    </tr>
  </thead>

  <tbody>
    <% @complains.each do |complain| %>
    <tr>
      <td><%= complain.user.email %></td>
      <td><%= link_to complain.question.title, admin_question_path(complain.question) %></td>
      <td><%= complain.content %></td>
      <td>
        <%= link_to "Edit", edit_admin_complain_path(complain), class: "btn btn-primary btn-xs" %>
        <%= link_to "Delete", admin_complain_path(complain), method: :delete, class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
