<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增题型", new_admin_type_path, class: "btn btn-primary btn-sm" ) %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>题型名称</td>
      <th>操作</td>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
    <tr>
      <td><%= type.title %></td>
      <td>
        <%= link_to "Edit", edit_admin_type_path(type), class: "btn btn-primary btn-xs" %>
        <%= link_to "Delete", admin_type_path(type), method: :delete, class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
