<%= form_for [:admin, @quiz] do |f| %>

  <% if @quiz.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@quiz.errors.count, "error") %> prohibited this person from being saved:</h2>

    <ul>
    <% @quiz.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "试卷题目" %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "抽题类别" %>
    <div class="btn-group" data-toggle="buttons">
      <% Category.all.each do |category| %>
        <label class="btn btn-default <%= (category.id == f.object.category_id)? 'active' : '' %>">
          <%= f.radio_button :category_id, category.id %>
          <%= category.title %>
        </label>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type_ids, "抽题题型" %>
    <%= f.collection_check_boxes( :type_ids, Type.all, :id, :title ) %>
  </div>

  <div class="form-group">
    <%#= f.label :question_count, "抽题数量" %>
    <%#= f.text_field :question_count, class: "form-control" %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." }, class: "btn btn-primary" %>
  <%= link_to "Cancel", admin_quizzes_path %>

<% end %>
