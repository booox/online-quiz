<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增类别", new_admin_category_path, class: "btn btn-primary btn-sm" ) %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>类别名称</td>
      <th>操作</td>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.title %></td>
      <td>
        <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-primary btn-xs" %>
        <%= link_to "Delete", admin_category_path(category), method: :delete, class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
