<h2><%= t("devise.sessions.log_in") %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: t("devise.sessions.email"), required: false, autofocus: true %>
    <%= f.input :password, label: t("devise.sessions.password"), required: false %>
    <%= f.input :remember_me, label: t("devise.sessions.remember_me"), as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("devise.sessions.log_in") %>
  </div>
<% end %>

<%= render "users/shared/links" %>
