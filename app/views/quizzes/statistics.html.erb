<div class="container course-block" id="leaderboard-content">
    <div class="row">
        <div class="content-block">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= t("quiz.leaderboard.title") %></h3>
                </div>
                <div class="panel-body">
                    <p>
                      <%= t("quiz.leaderboard.current_score_text") %><%= @current_user_score %><%= t("quiz.leaderboard.current_ranke_text") %><%= @current_user_rank %>
                    </p>
                </div>

            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-8">
                            <h3 class="panel-title"><%= t("quiz.leaderboard.leaderboard_text") %></h3>
                        </div>
                    </div>
                </div>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th><%= t("quiz.leaderboard.user_name") %></th>
                            <th><%= t("quiz.leaderboard.score") %></th>
                            <th><%= t("quiz.leaderboard.rank") %></th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @leaders.each do |leader| %>
                        <tr class="leaderboard-items">
                            <td><a href="#"><%= leader[:display_name] %></a></td>
                            <td><%= leader[:score] %></td>
                            <td><%= leader[:rank] %></td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>

            </div>
            <div class="text-center">
                <%= will_paginate @leaders, class: "apple_pagination" %>
            </div>
        </div>

    </div>
</div>
