var right_answer_id = "<%= @right_answer_id %>";
var choice_id = "<%= @choice_id %>";

$("[id^=answer-]").removeAttr("href");  // disable the answers' links when clicked

var quiz_answered_questions_count = parseInt($( "#quiz_answered_questions_count" ).text(), 10) + 1 ;
$( "#quiz_answered_questions_count" ).text( quiz_answered_questions_count );

if(right_answer_id == choice_id){   // right answer
  $("#answer-<%= @choice_id %>").addClass('list-group-item-success');

  var quiz_correct_answers_count = parseInt($( "#quiz_correct_answers_count" ).text(), 10) + 1;
  $( "#quiz_correct_answers_count" ).text( quiz_correct_answers_count );
}else{                             // wrong answer
  $("#answer-<%= @choice_id %>").addClass('list-group-item-danger');
  $("#answer-<%= @right_answer_id %>").addClass('list-group-item-success');

  var quiz_wrong_answers_count = parseInt($( "#quiz_wrong_answers_count" ).text(), 10) + 1 ;
  $( "#quiz_wrong_answers_count" ).text( quiz_wrong_answers_count );
};
