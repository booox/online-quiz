<div class="modal fade modal-draggable message-modal-style" id="complainModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog ui-draggable">
        <div class="modal-content">
            <div class="modal-header ui-draggable-handle">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="complainModalLabel">您对本题有什么想说的？</h4>
            </div>

            <%= simple_form_for @complain, class: "simple_form new_complain", id: "new_complain", url: complain_quiz_question_path, remote: true do |f| %>

              <div class="modal-body">
                <div class="input-block">
                  <div class="form-group hidden complain_question_id">
                    <%= f.input :question_id, as: :hidden, input_html: { value: @question.id } %>
                  </div>

                  <div class="form-group text optional complain_content">
                    <%= f.input :content, label: "槽点/反馈", as: :text, class: "form-control text optional", id: "complain_content" %>
                  </div>

                  <div class="message-modal-footer">
                    <div class="row">
                      <span id="complain-submit-status-srea" class="pull-left"></span>
                    </div>
                    <%= link_to "取消", "#", "data-dismiss": "modal" %>
                    <%= f.button :submit, "吐槽", class: "btn btn-primary", id: "complain-submit-btn", "data-disable-with": "提交中...", disabled: "disabled"  %>
                  </div>
                </div>
              </div>

            <% end %>



